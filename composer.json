{
    "name": "fof/transliterator",
    "description": "Transliterate non-ASCII characters in discussion URL",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/friendsofflarum/transliterator/issues",
        "source": "https://github.com/friendsofflarum/transliterator",
        "forum": "https://discuss.flarum.org/d/18074"
    },
    "homepage": "https://friendsofflarum.org",
    "funding": [
        {
            "type": "website",
            "url": "https://opencollective.com/fof/donate"
        }
    ],
    "require": {
        "flarum/core": "^0.1.0-beta.15",
        "behat/transliterator": "^1.3"
    },
    "suggest": {
        "ext-intl": "Needed for vanilla transliteration"
    },
    "authors": [
        {
            "name": "David Sevilla Mart√≠n",
            "email": "david.s@redevs.org",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "FoF\\Transliterator\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "FoF URL Transliterator",
            "category": "feature",
            "icon": {
                "name": "fas fa-link",
                "backgroundColor": "#e74c3c",
                "color": "#fff"
            }
        },
        "flagrow": {
            "discuss": "https://discuss.flarum.org/d/18074"
        }
    }
}
